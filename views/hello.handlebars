<!-- Main Content -->
<main class="flex-fill">
    <div class="container my-5">
        <!-- Hero Section -->
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4">Welcome to Pet Connect</h1>
                <p class="lead">
                    Your one-stop destination to search for lost pets or find your new best friend to adopt. We are
                    dedicated to connecting loving homes with pets in need.
                </p>
                <a href="/search" class="btn btn-primary btn-lg mt-3">Search for Pets</a>
            </div>
            <div class="col-md-6">
                <img src="/images/adopt-a-pet.jpg" class="img-fluid" alt="Cute pets">
            </div>
        </div>

        <!-- Features Section -->
        <div class="row text-center mt-5">
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0">
                    <div class="card-body">
                        <i class="bi bi-search fs-1 text-primary"></i>
                        <h5 class="card-title mt-3">Find Lost Pets</h5>
                        <p class="card-text">
                            Use our advanced search to locate your lost pet quickly and efficiently.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0">
                    <div class="card-body">
                        <i class="bi bi-heart fs-1 text-danger"></i>
                        <h5 class="card-title mt-3">Adopt a Pet</h5>
                        <p class="card-text">
                            Browse through thousands of pets looking for a loving home and adopt today.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0">
                    <div class="card-body">
                        <i class="bi bi-geo-alt fs-1 text-success"></i>
                        <h5 class="card-title mt-3">Local Shelters</h5>
                        <p class="card-text">
                            Connect with local shelters and rescue organizations in your area.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Call to Action Section -->
        <div class="row mt-5">
            <div class="col text-center">
                <h2>Ready to Find Your Furry Friend?</h2>
                <p class="lead">
                    Join our community and start your search today.
                </p>
                <a href="/register" class="btn btn-outline-primary btn-lg">Get Started</a>
            </div>
        </div>
    </div>
</main>
